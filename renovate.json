{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "flux": {
    "fileMatch": ["flux/.+\\.(yml|yaml)$"]
  },
  "kubernetes": {
    "fileMatch": [".+\\.(yml|yaml)$"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["linuxserver/heimdall"],
      "allowedVersions": "<=4.0.0"
    },
    {
      "matchPackageNames": ["linuxserver/jellyfin"],
      "allowedVersions": "<=20.0.0"
    },
    {
      "matchPackageNames": ["linuxserver/calibre-web"],
      "allowedVersions": "<=5.0.0"
    },
    {
      "matchPackagePatterns": [".*fluxcd.*", "HelmRepository", "HelmRelease"],
      "enabled": false
    }
  ]
}
